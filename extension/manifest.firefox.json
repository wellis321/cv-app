{
  "manifest_version": 3,
  "name": "Save job to Simple CV Builder",
  "version": "1.1",
  "description": "Save the current page as a job to your Simple CV Builder job list with one click.",
  "permissions": ["storage", "activeTab", "contextMenus", "scripting"],
  "host_permissions": ["*://www.linkedin.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Save job to Simple CV Builder"
  },
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/jobs/view/*"],
      "js": ["linkedin-job-title.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["extract-closing-date.js"],
      "run_at": "document_idle"
    }
  ]
}
