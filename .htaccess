# Enable rewrite engine
RewriteEngine On

# Force HTTPS in production (uncomment these 4 lines when SSL is configured)
RewriteCond %{HTTPS} !=on
RewriteCond %{HTTP_HOST} !^localhost [NC]
RewriteCond %{HTTP_HOST} !^127\.0\.0\.1
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Don't rewrite if the file exists
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Don't rewrite if the directory exists
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Handle storage files - serve directly via proxy
RewriteCond %{REQUEST_URI} ^/storage/
RewriteRule ^storage/(.*)$ api/storage-proxy.php?path=$1 [L,QSA]

# Handle CV routes: /cv/@username -> cv.php?username=username
RewriteRule ^cv/@([a-z0-9][a-z0-9\-_]+)$ cv.php?username=$1 [L,QSA]

# Handle CV routes: /cv/userid -> cv.php?userid=userid (for backward compatibility)
RewriteRule ^cv/([a-f0-9\-]{36})$ cv.php?userid=$1 [L,QSA]

# Handle organisation public pages: /agency/{slug} -> agency-public.php?slug={slug}
RewriteRule ^agency/([a-z0-9\-]+)$ agency-public.php?slug=$1 [L,QSA]

# Sitemap for SEO (Google prefers sitemap.xml)
RewriteRule ^sitemap\.xml$ sitemap.php [L]

# Favicon at root - Bing/Google check this URL first for search snippet icons
RewriteRule ^favicon\.ico$ static/images/favicon_io/favicon.ico [L]

# Redirect to index.php if file doesn't exist (for routing)
RewriteRule ^(.*)$ index.php [QSA,L]

# Cache static assets (1 month) - improves repeat visit performance
<IfModule mod_headers.c>
    <FilesMatch "\.(css|js|webp|jpg|jpeg|png|gif|svg|ico|woff2?)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>
</IfModule>

# Security Headers (backup - also set in PHP)
<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"

    # HSTS - uncomment when using HTTPS in production
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# Protect sensitive files
<FilesMatch "\.(env|log|sql|md)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# PHP settings
php_value upload_max_filesize 10M
php_value post_max_size 10M
