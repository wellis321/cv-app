# B2B CV Builder - Environment Configuration
# Copy this file to .env and fill in your values

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DB_HOST=localhost
DB_NAME=b2b_cv_app
DB_USER=root
DB_PASS=

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
# Set to 'production' for live environment
APP_ENV=development

# Your application URL (no trailing slash)
APP_URL=http://localhost:8000

# ==============================================
# STRIPE CONFIGURATION
# ==============================================
# Get these from https://dashboard.stripe.com/apikeys

# Publishable key (starts with pk_test_ or pk_live_)
STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Secret key (starts with sk_test_ or sk_live_)
STRIPE_SECRET_KEY=sk_test_xxx

# Webhook signing secret (starts with whsec_)
STRIPE_WEBHOOK_SECRET=whsec_xxx

# ==============================================
# STRIPE PRICE IDS - Individual Plans (Simple CV Builder)
# ==============================================
# All paid plans use 7-day free trial (set in checkout, not in Stripe)
# 1 week: £4.99/week, recurring
STRIPE_PRICE_PRO_1WEEK=price_1T1GcsEMgRyvTqUXq1uIM8dT
# 1 month: £14.99/month, recurring
STRIPE_PRICE_PRO_MONTHLY=price_1T1GcuEMgRyvTqUXcBTpflSH
# 3 months: £34.99 every 3 months, recurring
STRIPE_PRICE_PRO_3MONTH=price_1T1GcvEMgRyvTqUXWF8UdH7C
# Optional legacy plans (leave empty if not used)
STRIPE_PRICE_PRO_ANNUAL=
STRIPE_PRICE_PRO_TRIAL_7DAY=
STRIPE_PRICE_LIFETIME=

# ==============================================
# STRIPE PRICE IDS - Organisation Plans (B2B)
# ==============================================
# Create these products in Stripe Dashboard:
# - Agency Basic: GBP 49/month, 10 candidates, 3 team members
# - Agency Professional: GBP 149/month, 50 candidates, 10 team members
# - Agency Enterprise: GBP 499/month, unlimited candidates & team

STRIPE_PRICE_AGENCY_BASIC=price_xxx
STRIPE_PRICE_AGENCY_PRO=price_xxx
STRIPE_PRICE_AGENCY_ENTERPRISE=price_xxx

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================
# For sending invitation emails, password resets, etc.
# If not set, emails will be logged instead of sent

# SMTP Configuration
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="CV Builder"

# ==============================================
# OPTIONAL SETTINGS
# ==============================================
# Session lifetime in seconds (default: 7 days)
# SESSION_LIFETIME=604800

# Maximum file upload size in bytes (default: 5MB)
# STORAGE_MAX_SIZE=5242880

# IndexNow (Bing, Yandex) - notify search engines when URLs change
# Optional: override key or production URL for IndexNow submission
# INDEXNOW_KEY=simplecv-indexnow-2024a1b2c3d4e5f6
# INDEXNOW_SITE_URL=https://simple-cv-builder.com
